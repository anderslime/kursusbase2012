<% you = current_student %>
<div id="head"><div><div>
	<h1><a href="<%= root_path %>"><span><%= t('sitename') %></span></a></h1>
	<%= render_navigation %>
	<%= form_tag courses_path, :method => :get do %>
		<%= text_field_tag :search, params[:search], :tabindex => 1, :placeholder => t('splaceholder') %>
	<% end %>
<div id="you"><% if you %>
	<%= t('you.are') %> <strong><%= you.fullname %></strong>. <a href="/logout"><%= t('you.logout') %></a>
<% else %>
	<a href="/login"><%= t('you.login') %></a>
<% end %></div>
</div></div></div>