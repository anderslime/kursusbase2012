<%
	site_title = t('sitename')
	page_title = yield(:title)
	
	title = (!page_title.blank? ? page_title + " | " + site_title : site_title)	
%>
<!DOCTYPE html>
<html lang="<%= I18n.locale %>" class="lang-<%= I18n.locale %>">
<head>
	<title><%= title %></title>
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<!--[if lt IE 9]><%= stylesheet_link_tag "only-ie", :media => "all" %><![endif]-->
	<%= csrf_meta_tags %>
</head>
<body>
	<div id="container"><div id="inner">
		<%= render :partial => "lhbar" %>
		<%= render :partial => "header" %>
		<div id="content">
			<%= yield %>
		</div>
	</div></div>
</body>
</html>
