<% if params[:search] %>
	<% title t('.courses') %>
	<h1><%= t('.courses') %></h1>
<% else %>
	<% title t('.allcourses') %>
	<h1><%= t('.allcourses') %></h1>
<% end %>

<table class="courses">
	<thead>
		<tr>
			<th scope="col" class="no"><%= t('.nonono') %></th>
			<th scope="col" class="title"><%= t('.title') %></th>
			<th scope="col" class="points"><%= t('.points') %></th>
		</tr>
	</thead>
	<tbody>
		
<% if !current_student.nil? %>
	<!-- COURSE RECOMMENDATIONS -->
	<% if not current_student.course_recommendations.empty? %>
		<% current_student.course_recommendations.each do |course_rec| %>
			<tr class="<%= cycle("odd", "even") %>">
				<td class="no"><%= course_rec.course.course_no %></td>
				<td class="title"><%= link_to course_rec.course.title, course_rec.course %></td>
				<td class="points"><%= course_rec.priority_value %></td>
			</tr>
		<% end %>
	<% end %>
<% else %>
<!--<td class="points"><%= "%g" % course_rec.course.ects_points %></td>-->

<% @courses.each do |course| %>
		<tr class="<%= cycle("odd", "even") %>">
			<td class="no"><%= course.course_no %></td>
			<td class="title"><%= link_to course.title, course %></td>
			<td class="points"><%= "%g" % course.ects_points %></td>
		</tr>
<% end %>
	</tbody>
</table>
<% end %>

<br />
