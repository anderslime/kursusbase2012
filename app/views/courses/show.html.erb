# encoding: utf-8

<% @course.serialize_objectives %>
<% if notice %><p id="notice"><%= notice %></p><% end %>
<div id="coursehead">
	<h1><span class="coursenumber"><%= @course.course_no %> </span><%= @course.title %></h1>
	<h2 class="altlang"><%= @course.title alt_language %></h2>
	<h2 class="pointdata"><strong><%= "%g" % @course.ects_points %> <%= t('.points') %>, <%= @course.season %></strong> (<%= @course.duration %><%#= t('.weeks') %>)</h2>
	<h3><% @course.main_course_types.each do |mct| %><%= mct.title %>, <% end %><%= t('languages.' + @course.language.downcase) %></h3>
<% if @course.open_education %>
	<p><%= t('.openedu') %></p>
<% end %>
	<div id="courseschedule">
		<table>
			<thead>
				<tr>
					<th scope="col" title="<%= t('days.mon') %>">M</th>
					<th scope="col" title="<%= t('days.tue') %>">T</th>
					<th scope="col" title="<%= t('days.wed') %>"><%= t('days.o') %></th>
					<th scope="col" title="<%= t('days.thu') %>">T</th>
					<th scope="col" title="<%= t('days.fri') %>">F</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>1A</td>
					<td>3A</td>
					<td>5A</td>
					<td>2B</td>
					<td>4B</td>
				</tr>
				<tr>
					<td>2A</td>
					<td>4A</td>
					<td>5B</td>
					<td>1B</td>
					<td>3B</td>
				</tr>
			</tbody>
		</table>
		<p><%= t('.examdate') %> <strong><%= @course.exam_schedule %></strong></p>
	</div>
</div>

<div id="courseinfo">
<dl class="section">
<% if @course.top_comment %>
	<dt>Kommentar</dt>
		<dd><%= @course.top_comment %></dd>
<% end %>
	<dt>Schedule</dt>
		<dd><%= @course.schedule %></dd>
	<dt>Teaching form</dt>
		<dd><%= @course.teaching_form %></dd>
	<% if @course.blocked_courses.count > 0 %>
	<dt>Point blocks</dt>
		<dd>
		<% @course.blocked_courses.each do |bc| %>
			<%= bc.course_no %><% if bc != @course.blocked_courses.last %>,<% end %>
		<% end%>
		</dd>
	<% end %>
	<% if @course.qualification_courses.count > 0 %>
	<dt>Qualificatied prerequisites</dt>
		<dd>
		<% @course.qualification_courses.each do |bc| %>
			<%= bc.course_no %><% if bc != @course.qualification_courses.last %>, <% end %>
		<% end %>
		</dd>
	<% end %>


	<% if @course.optional_courses.count > 0 %>
		<dt>Optional prerequisites</dt>
		<dd>
		<% @course.optional_courses.each do |bc| %>
			<%= bc.course_no %><% if bc != @course.optional_courses.last %>,<% end %>
		<% end %>
		</dd>
	<% end %>
	<% if @course.mandatory_courses.count > 0 %>
	
	<dt>Mandatory prerequisites</dt>
		<dd>
		<% @course.mandatory_courses.each do |bc| %>
			<%= bc.course_no %>
		<% end %>
		</dd>
	
	<% end %>
	<% if @course.participant_limit %>
		
			<dt>Participant limit</dt>
			<dd><%= @course.participant_limit %></dd>
		
	<% end %>
	
		<dt>Course objectives</dt>
		<dd><%= @course.course_objectives %></dd>
	
	
		<dt>Learn objectives</dt>
		<dd>
			<ul>
	  		<% @course.learn_objectives.each do |lo| %>
					<li><%= lo %></li>
				<% end %>
			</ul>
		</dd>
	
	
		<dt>Content</dt>
		<dd><%= @course.content %></dd>
	
	<% if @course.litteratur %>
		
			<dt>Litteratur</dt>
			<dd><%= @course.litteratur %></dd>
		
	<% end %>
	
	<dt>Kursusansvarlig</dt>
		<dd>
			<% @course.teachers.each do |t| %>
				<%= link_to (image_tag(t.image(70), :border => 0)), t.link, :target => '_blank' %><%= ', ' if t != @course.teachers.last %>
			<% end %>
		</dd>
	
	
	<dt>Institute</dt>
		<dd><%= @course.institute.display %></dd>
	
	
	<dt>Registration</dt>
		<dd><%= @course.registration %></dd>
	
	<% if @course.homepage %>
		
	<dt>Homepage</dt>
			<dd><%= link_to @course.homepage, @course.homepage %></dd>
		
	<% end %>
	<% if !@course.keywords.empty? %>
	<dt>Keywords</dt>
			<dd>
					<% @course.keywords.each do |k| 
						if k.respond_to? :title %>
							<%= k.title %><%= ', ' if k != @course.keywords.last%>
					<% 	end
					end %>
			</dd>
		
	<% end %>
</dl>
</div>

<div id="courserec">
	<% if not @course.prereq_for.empty? %>
	<h3>This course is a prerequisite for these courses:</h3>
	<ul>
	<% @course.prereq_for.each do |rec_course| %>
		<li>
		<% if rec_course.active %>
			<%= link_to rec_course.course_no, rec_course %>
		<% else %>
			<%= rec_course.course_no %>
		<% end %>
		</li>
		<% end %>
	</ul>
	<% end %>
	
	<% if not @course.similar_courses.nil? and not @course.similar_courses.empty? %>
	<h3>People who has taken this course has also taken these courses:</h3>
	<ul>
	<% @course.similar_courses.each do |key, sim_course| %>
		<li>
			<% if sim_course.active %>
				<%= link_to sim_course.course_no, sim_course %> - <%= "#{key} has taken this course" %>
			<% else %>
				<%= sim_course.course_no %> - <%= "#{key} has taken this course" %>
			<% end %>
		</li>
	<% end %>
	</ul>
	<% end %>
	
</div>

